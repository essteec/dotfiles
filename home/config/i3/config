bindsym $mod+Shift+v exec --no-startup-id "greenclip clear"

# Select color hex code from screen
bindsym $mod+o exec --no-startup-id xcolor | xclip -selection clipboard

# Screenshot: ss with scrot
# select area and save to file
bindsym XF86Calculator exec --no-startup-id scrot --freeze --select ~/Pictures/Screenshots/ss-fc_$(date +%Y-%m-%d_%H-%M-%S).png
# select area and copy the image
bindsym $mod+Shift+s exec --no-startup-id scrot -s -f - | xclip -selection clipboard -t image/png

# take ss for whole screen and focused window | XF86Calculator= FN+KP_Enter in my keyboard
bindsym Shift+XF86Calculator exec --no-startup-id scrot ~/Pictures/Screenshots/ss-fs_$(date +%Y-%m-%d_%H-%M-%S).png && scrot -u ~/Pictures/Screenshots/ss-w_$(date +%Y-%m-%d_%H-%M-%S).png
# put last saved fs or fc ss to clipboard
bindsym $modAlt+XF86Calculator exec --no-startup-id xclip -selection clipboard -t image/png -i $(ls -t ~/Pictures/Screenshots/ss-f*.png 2>/dev/null | head -n 1)

# kill and start picom i' button
